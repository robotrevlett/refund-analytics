{
  "name": "refund-analytics",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "remix vite:build",
    "dev": "remix vite:dev",
    "start": "remix-serve ./build/server/index.js",
    "docker-start": "npm run setup && remix-serve ./build/server/index.js",
    "setup": "prisma generate && prisma migrate deploy",
    "lint": "eslint --cache --cache-location ./node_modules/.cache/eslint .",
    "shopify": "shopify",
    "prisma": "prisma",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:db:up": "docker compose up -d",
    "test:db:create": "docker exec $(docker compose ps -q postgres) psql -U postgres -c 'CREATE DATABASE refund_analytics_test;' 2>/dev/null || true",
    "test:db:migrate": "DATABASE_URL=postgresql://postgres:postgres@localhost:5432/refund_analytics_test npx prisma migrate deploy",
    "test:all": "npm run test:db:up && npm run test:db:create && npm run test:db:migrate && npm test",
    "test:e2e:all": "npm run test:db:up && npm run test:db:create && npm run test:db:migrate && DATABASE_URL=postgresql://postgres:postgres@localhost:5432/refund_analytics_test TEST_DATABASE_URL=postgresql://postgres:postgres@localhost:5432/refund_analytics_test npm run test:e2e",
    "dev:test": "node tests/e2e/test-server.js"
  },
  "dependencies": {
    "@prisma/client": "^5.11.0",
    "@remix-run/dev": "^2.7.1",
    "@remix-run/node": "^2.7.1",
    "@remix-run/react": "^2.7.1",
    "@remix-run/serve": "^2.7.1",
    "@shopify/polaris": "^13.0.0",
    "@shopify/shopify-app-remix": "^3.0.0",
    "@shopify/shopify-app-session-storage-prisma": "^5.0.0",
    "isbot": "^5.1.0",
    "prisma": "^5.11.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "recharts": "^3.7.0",
    "vite": "^5.1.0",
    "vite-tsconfig-paths": "^4.3.1"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.2",
    "@remix-run/eslint-config": "^2.7.1",
    "@testing-library/jest-dom": "^6.4.0",
    "@testing-library/react": "^14.2.0",
    "jsdom": "^24.0.0",
    "msw": "^2.2.0",
    "vitest": "^1.3.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
